<?xml version="1.0" ?>
<robot name="stella" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Init colour -->
  <material name="black">
      <color rgba="0.0 0.0 0.0 1.0"/>
  </material>

  <material name="dark">
    <color rgba="0.3 0.3 0.3 1.0"/>
  </material>

  <material name="light_black">
    <color rgba="0.4 0.4 0.4 1.0"/>
  </material>

  <material name="blue">
    <color rgba="0.0 0.0 0.8 1.0"/>
  </material>

  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>

  <material name="grey">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <material name="orange">
    <color rgba="1.0 0.4235 0.0392 1.0"/>
  </material>

  <material name="brown">
    <color rgba="0.8706 0.8118 0.7647 1.0"/>
  </material>

  <material name="red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>

  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

<!-- 로봇 크기 정의
  - 중앙 - 앞 : 0.305 , 중앙 - 뒤 : 0.305
  - 중앙 - 앞(depth 카메라) : 0.33505 , 중앙 - 뒤 : 0.305
  - 양옆 길이 : 0.6345
  - 로봇 높이 : 0.6158
  - G6 라이다 : x -> 0 , y -> 0 , z -> 0.6055
  - depth 카메라 : x -> 0.33505 , y -> 0 , z -> 0.4255
  - ahrs : x -> 0 , y -> 0 , z -> 0.42
-->


  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link" />
    <!-- 바퀴 의 위치(앞뒤 위치 완료) -->
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
  </joint>

  <link name="base_link">
    <visual>
      <!-- 로봇 동작과 함께 설정 필요 -->
      <!-- <origin xyz="0.0 0.0 0.0" rpy="1.570796327 0.0 1.570796327"/> -->
      <origin xyz="-0.305 -0.31725 0.0" rpy="0.0 0.0 0.0"/>
      <geometry>
        <!-- 설정 완료( sunny ) -->
        <!-- 로봇 동작과 함께 설정 필요 -->
        <mesh filename="package://stella_description/meshes/bases/sunny_robot_first.STL" scale="1 1 1"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <!-- 설정 완료( sunny ) -->
    <collision>
      <!-- 로봇 동작과 함께 설정 필요 -->
      <origin xyz="0.0 0.0 0.3079" rpy="0.0 0.0 0.0"/>
      <geometry>
      <!-- size="앞뒤길이 양옆길이 높이" -->
        <box size="0.61 0.6345 0.6158"/>
      </geometry>
    </collision>
    
    <inertial>
    <!-- 설정 완료( sunny ) -->
      <origin xyz="0.0 0.0 0.3079" rpy="0.0 0.0 0.0"/>
    <!-- 로봇의 무게(kg) - 추후 재작업 -->
      <mass value="40.0"/>
      <inertia ixx="0.858696666666667" ixy="0.0" ixz="0.0"
               iyy="0.483428021858347" iyz="0.0"
               izz="0.694696666666667" />
    </inertial>
  </link>

<!-- ahrs 센서 위치 ( 완료 - sunny ) -->
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0.0 0.0 0.42" rpy="0.0 0.0 0.0"/>
  </joint>

  <link name="imu_link"/>

<!-- 최상단 G6 라이다 위치 ( 완료 - sunny ) -->
  <joint name="scan_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan"/>
    <origin xyz="0.0 0.0 0.6055" rpy="0.0 0.0 0.0"/>
  </joint>

  <link name="base_scan" />

<!-- depth 카메라 위치 ( 완료 - sunny ) -->
  <joint name="floor_2_joint" type="fixed">
    <parent link="base_link"/>
    <child link="floor_2_scan"/>
    <origin xyz="0.33505 0.0 0.4255" rpy="0.0 0.0 0.0"/>
  </joint>

  <link name="floor_2_scan" />

</robot>
